{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": { "zeroConfig": true }
    },
    {
      "src": "Backend/package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["Backend/**"] }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}